<h1 class="display-3 text-center col-10 mb-4">Feed Me a Burger, Seymore!</h1>
<div class="container-fluid col-10">
    <img id="burgerPic" class="mb-4 img-responsive" src="./assets/img/burger.png">
    <div class="row mb-4">
        <div class="col-6">
            <h2 class="display-5 text-center">Burgers Ready to be Devoured</h2>
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}} <button class="devour" data-id="{{id}}">Devour Burger!</button>
                </li>
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2 class="display-5 text-center">Burgers - The Faithfully Departed</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

